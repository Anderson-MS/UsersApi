@model Users.Api.Models.User

@{
    ViewData["Title"] = "Editar Usuário";
}

<style>
    body {
        background-color: #333;
        color: #fff;
    }

    .form-control {
        background-color: #555;
        border: 1px solid #777;
        color: #fff;
    }

    .form-control::placeholder {
        color: #bbb;
    }

    .form-group label {
        color: #ddd;
    }

    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }

    .btn-secondary {
        background-color: #555;
        border-color: #555;
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        background-color: #6FBF73;
        border-color: #6FBF73;
    }

    .btn-group {
        display: flex;
        justify-content: center;
    }

    .btn-group .btn {
        margin: 0 5px;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    hr {
        border-top: 1px solid #777;
    }
</style>

<h2>@ViewData["Title"]</h2>

<h4 class="mb-3">Usuário</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Digite o nome do usuário" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Digite o email do usuário" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

